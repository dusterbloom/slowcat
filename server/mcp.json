{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "${MEMORY_FILE_PATH:-./data/tool_memory/memory.json}"
      }
    },
    "browser-text": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--caps",
        "text",
        "--browser",
        "chrome"
      ]
    },
    "javascript": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-javascript"
      ],
      "env": {}
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/peppi/Documents"
      ],
      "env": {}
    }
  }
}