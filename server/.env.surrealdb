# SurrealDB Memory System Configuration
# Copy this to .env to enable SurrealDB memory system

# Enable SurrealDB memory system
USE_SURREALDB=true

# SurrealDB connection settings
SURREALDB_URL=ws://127.0.0.1:8000/rpc
SURREALDB_USER=root
SURREALDB_PASS=slowcat_secure_2024
SURREALDB_NAMESPACE=slowcat
SURREALDB_DATABASE=memory

# SurrealDB server settings (for startup script)
SURREALDB_HOST=127.0.0.1
SURREALDB_PORT=8000
SURREALDB_DATA_DIR=data/surrealdb

# Disable other memory systems when using SurrealDB
USE_STATELESS_MEMORY=false

# Standard Slowcat settings (update as needed)
OPENAI_BASE_URL=http://localhost:1234/v1
ENABLE_VOICE_RECOGNITION=true
ENABLE_MEMORY=true
ENABLE_MCP=true

# Optional: MCP settings
MCPO_PORT=3001
MCPO_API_KEY=your-secure-api-key-here