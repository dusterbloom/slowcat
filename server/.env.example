# LLM Configuration
OPENAI_API_KEY="not-needed"
OPENAI_BASE_URL="http://localhost:1234/v1"
LLM_CONTEXT_LENGTH=32768  # Increase for models with larger context (e.g., 65536, 131072)
HF_TOKEN= 

# Feature Toggles
ENABLE_VOICE_RECOGNITION=true
ENABLE_VIDEO=false
ENABLE_MEMORY=false
ENABLE_MCP=true

# Local Tools Configuration
# Options: "all", "none", or comma-separated list of tool names
# Example: "get_weather,calculate,play_music"
ENABLED_LOCAL_TOOLS=none
# To disable specific tools when using MCP, use:
# DISABLED_LOCAL_TOOLS=store_memory,retrieve_memory,search_memory,delete_memory,update_memory

# Offline Mode (for running without internet)
HF_HUB_OFFLINE=0  # Uncomment to enable offline mode for HuggingFace models
TRANSFORMERS_OFFLINE=0  # Uncomment to enable offline mode for transformers

# MCP Tool API Keys (optional)
GITHUB_TOKEN=""
BRAVE_API_KEY=""
MCPO_API_KEY=""  # Required for MCP tool discovery via MCPO server
USER_HOME_PATH=""  # Optional: Override home directory path (e.g., /Users/yourname). If empty, uses system default

# Legacy API Keys (not used but kept for compatibility)
DEEPGRAM_API_KEY=""
RIME_API_KEY=""