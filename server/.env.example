# LLM Configuration
OPENAI_API_KEY="not-needed"
OPENAI_BASE_URL="http://localhost:1234/v1"
DEFAULT_LLM_MODEL="qwen2.5-7b-instruct"  # Set your preferred LLM model here
LLM_CONTEXT_LENGTH=32768  # Increase for models with larger context (e.g., 65536, 131072)
HF_TOKEN= 

# Feature Toggles
ENABLE_VOICE_RECOGNITION=true
ENABLE_VIDEO=false
ENABLE_MEMORY=false
ENABLE_MEMOBASE=false
ENABLE_MCP=true

# Local Tools Configuration
# Options: "all", "none", or comma-separated list of tool names
# Example: "get_weather,calculate,play_music"
ENABLED_LOCAL_TOOLS=none
# To disable specific tools when using MCP, use:
# DISABLED_LOCAL_TOOLS=store_memory,retrieve_memory,search_memory,delete_memory,update_memory

# --- STT BACKEND SWITCH ---
# Options: whisper-mlx (default), sherpa-onnx
STT_BACKEND=whisper-mlx

# Sherpa-ONNX configuration (used when STT_BACKEND=sherpa-onnx)
# Point this to a directory containing *either*:
#   - Transducer: encoder.onnx, decoder.onnx, joiner.onnx, tokens.txt
#   - Paraformer: model.onnx, tokens.txt
SHERPA_ONNX_MODEL_DIR=/absolute/path/to/sherpa-model
SHERPA_DECODING_METHOD=greedy_search
SHERPA_PROVIDER=cpu
# Optional hotwords for biasing (one word/phrase per line)
# SHERPA_HOTWORDS_FILE=./data/hotwords.txt
SHERPA_HOTWORDS_SCORE=1.5

# Language locking for improved accuracy (10-lang model only)
# Set to force specific language: 'be', 'de', 'en', 'es', 'fr', 'hr', 'it', 'pl', 'ru', 'uk'
# SHERPA_LANGUAGE_LOCK=it
# SHERPA_LANGUAGE_LOCK_MODE=strict  # 'strict' = filter non-matching, 'warn' = log only

# Offline Mode (for running without internet)
HF_HUB_OFFLINE=0  # Uncomment to enable offline mode for HuggingFace models
TRANSFORMERS_OFFLINE=0  # Uncomment to enable offline mode for transformers

# MemoBase Configuration (external memory service)
MEMOBASE_AUTO_START=true
MEMOBASE_PROJECT_URL="http://localhost:8019"
MEMOBASE_API_KEY="secret"
MEMOBASE_FALLBACK_TO_LOCAL=true
MEMOBASE_MAX_CONTEXT_SIZE=500
MEMOBASE_FLUSH_ON_SESSION_END=true

# MCP Tool API Keys (optional)
GITHUB_TOKEN=""
BRAVE_API_KEY=""
MCPO_API_KEY="slowcat-secret"  # Required for MCP tool discovery via MCPO server
USER_HOME_PATH=""  # Optional: Override home directory path (e.g., /Users/yourname). If empty, uses system default

# Legacy API Keys (not used but kept for compatibility)
DEEPGRAM_API_KEY=""
RIME_API_KEY=""